body {

    margin:0;
    padding:0;
    font:14px/1.5;
    font-family:'Microsoft YaHei';
    max-width:640px;
    margin:auto;
}


/*首页头部start*/

.index_0_header_top {
    background-color:#fff;
}
.index_0_header_top > ul {
      list-style-type:none;
      margin:0;
      padding:0;
      display:-webkit-box;
      line-height:2.2;
      border-bottom:1px solid #cccccc;
      font-size:1.5em;
}
    .index_0_header_top > ul > li {
        -webkit-box-flex:1;
        text-align:center;
    }
        .index_0_header_top > ul > li{
            width:10%;
        }
    .index_0_header_top > ul > li {
            color:#83b99c;
    }
            .index_0_header_top > ul > li:nth-child(2) {
                width:60%;
                line-height:1;
            }
                .index_0_header_top > ul > li:nth-child(2) > div {
                    display:inline-table;
                    line-height:2;
                    margin:10px 0;
                    background-color:#64a786;
                    color:#fff;
                    border-radius:5px;
                }
.indexbutton {
    font-size: 16px;
    float: left;
    width:80px;
}
.indexbutton_on {
    color:#fff;
}
.indexbutton_off {
    background-color:#fff;
    margin:1px;
    color:#64a786;
    border-radius:5px;
}

/*首页头部end*/



@media screen and (max-width:320px ) {/*当屏幕尺寸小于>320*/
           /*首页幻灯片0 start*/
            .index_0_slide_div {
                min-height:100px;
               background-color:#ccc;
            }
            /*首页幻灯片0 end*/


            /*              首页菜单 start*/
.index_0_Menu_div > ul {
        list-style-type:none;
        padding:0;
        margin:5px 10px;
        display:inline-table;
        text-align:center;
}
    .index_0_Menu_div > ul > li {
        float:left;
        width:25%;
        margin:5px 0;
    }
.index_0_Menu_div > ul > li > div {

}
.index_0_Menu_div > ul > li > div  > img{
            width:50px;height:50px;
            border-radius:15px;
}
    .index_0_Menu_div > ul > li > div > div {
        margin:2px 0;
        color:#999;
        font-size:13px;
    }
/*首页菜单 end*/



/*首页模块 start*/
.index_0_Module {
    margin:0 10px 0 10px;
}
.index_0_Module_1 {
    width:100%;
    height:100px;
    }
    .index_0_ModuleMargin {
        margin:5px 0;
    }
    .index_0_Module_3 {
        width:100%;
        height:100px;
    }
        .index_0_Module_3 > ul {
            list-style-type:none;
            margin:0;padding:0;
            display:-webkit-box;
            height:100%;
        }
            .index_0_Module_3 > ul > li {
                -webkit-box-flex:1;
                
            }
/*首页模块 end*/











}
@media screen and (min-width:321px ) { /*当屏幕尺寸大于>320*/
     /*首页幻灯片0 start*/
    .index_0_slide_div {
         min-height:130px;
         background-color:#ccc;
    }
    /*首页幻灯片0 end*/


    /*首页菜单 start*/
.index_0_Menu_div > ul {
        list-style-type:none;
        padding:0;
        margin:5px 10px;
        display:inline-table;
        text-align:center;
}
    .index_0_Menu_div > ul > li {
        float:left;
        width:25%;
        margin:5px 0;
    }
.index_0_Menu_div > ul > li > div {

}
.index_0_Menu_div > ul > li > div  > img{
            width:60px;height:60px;
            border-radius:15px;
}
    .index_0_Menu_div > ul > li > div > div {
        margin:2px 0;
        color:#999;
        font-size:15px;
    }
/*首页菜单 end*/












/*                  首页模块 start*/
.index_0_Module {
    margin:0 10px 0 10px;
}
.index_0_Module_1 {
    width:100%;
    height:130px;
    }
    .index_0_ModuleMargin {
        margin:5px 0;
    }
/*              首页模块 end*/













