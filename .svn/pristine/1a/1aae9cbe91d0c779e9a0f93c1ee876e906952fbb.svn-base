body {
    background-color:#fff;
    font-family:'Microsoft YaHei' !important;
}
.div_basic {
    padding: 10px 0 10px 0;
    background-color:#ececec;
}
    .div_basic div {
        text-align:center;
    }
.div_img {
    margin-bottom: 10px;
    margin-top: 10px;
}
    .div_img img {
        border-radius: 50%;
    }
.div_info {
    margin-top:10px;
    display: -webkit-box;
}
    .div_info div {
        width: 32%;
    }
        .div_info div:nth-child(1) {
            border-right: 1px solid #aaa;
        }.div_info div:nth-child(2) {
            border-right: 1px solid #aaa;
        }
        .div_info div span {
            display: block;
        }
         .div_info div span:nth-child(2) {
            color:#6CA94B;
            font-size:1.2em;   
        }
#div_bottom {

}
.div_bootom_row {
    display:-webkit-box;    
    padding: 15px 0 15px 0;
}
    .div_bootom_row div {
        width: 33%;
    }
        .div_bootom_row div span {
            display:block;
            text-align:center;
        }
    .div_bootom_row img {
        border-radius: 50%;
        padding: 10px;
        height: 60px;
        width: 60px;
    }