@using Webdiyer.WebControls.Mvc;

@model PagedList<MltxManager.Models.DBModel.Mltx_Slide>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/ImageBank.css" rel="stylesheet" />
<div class="container-fluid" >
    <div class="rule">    
         <!-- BEGIN PAGE HEADER-->
         <div class="row">
            <div class="col-md-12">
               <!-- BEGIN PAGE TITLE & BREADCRUMB-->
               <h3 class="titles" style="margin:0px;margin-bottom:10px;">
                  幻灯片 <small>幻灯片</small>
               </h3>
               <ul class="page-breadcrumb breadcrumb">
                 <li>
                     <i class="icon-home"></i>
                     <a href="#"> 幻灯片</a> 
                  </li> 
               </ul>
               <!-- END PAGE TITLE & BREADCRUMB-->
            </div>
         </div>
         <!-- END PAGE HEADER-->
         <!-- BEGIN PAGE CONTENT-->                  
         <div class="row">
             <div class="col-md-7">
                <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                <div class="page-breadcrumb ">
                        <a href="/Mltx_Menu/MenuModuleAddEdit" class="btn default"><i class="icon-plus"></i> 添加</a>
                        <a href="javascript:location.reload()" class="btn default"><i class="icon-refresh"></i> 刷新</a>
                        <a href="#" class="img-delbutton1 btn default" style="display:none" id="checkboxdeletebutton"><i class="icon-remove"></i> 删除</a>
                    </div>
                <!-- END PAGE TITLE & BREADCRUMB-->
             </div>
          
           </div>
             <br />
        <div class="row">
            <div class="col-md-12">
               <!-- BEGIN SAMPLE TABLE PORTLET-->
               <div class="portlet">
                  <div class="portlet-body" style="display: block;">
                     <div class="table-responsive">
                        <table class="table table-striped table-bordered table-advance table-hover">
                           <thead>
                              <tr>
                                 <th>标题 </th>
                                 <th>跳转类型</th>
                                 <th>类型</th>
                                  <th>排序</th>
                                  <th>操作</th>
                                  
                              </tr>
                           </thead>
                           <tbody>

                               @{
                                    foreach(MltxManager.Models.DBModel.Mltx_Slide item in Model){

                                        string LocationType = item.SlideCls == 0 ? "微信" : "安卓";
                                        string Location = item.Location == 0 ? "商城" : "鲜果";
                                        
                                                <tr>
                                                    <td>@item.Title</td>
                                                    <td>@LocationType</td>
                                                    <td>
                                                        @Location
                                                    </td>
                                                      <td>
                                                          @item.sort
                                                      </td>
                                                  <td><a href="/Mltx_Slide/SlideAddEdit/@item.Id" class="btn default btn-xs black" title="编辑"><i class="icon-edit"></i></a>
                                                 <a href="javascript:;" data-id="@item.Id" data-action="/Mltx_Slide/SlideRemove" data-remove="single" class="btn default btn-xs black " title="删除"><i class="icon-trash"></i></a>
                                             </td>
                                                </tr>
                                    }
                               }
                           </tbody>
                        </table>
                         <footer style="text-align:center">
                         @Html.Pager(Model, new Webdiyer.WebControls.Mvc.PagerOptions { PageIndexParameterName = "id" })
                     </footer> 
                     </div>
                  </div>
               </div>
               <!-- END SAMPLE TABLE PORTLET-->
            </div>
         <!-- END PAGE CONTENT--> 
            </div>
        </div>
      </div>

        <!---View-->
                   <div class="modal fade in" id="basic" tabindex="-1" role="basic" aria-hidden="true">
                        <div class="modal-dialog modal-basic">
                           <div class="modal-content">
                              <div class="modal-header">
                                 <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                 <h3 class="modal-title" style="font-family:'Microsoft YaHei';font-weight: 500;font-size: 20px;">修改订单价格<small  style="color:red"> 输入的数值可正可负，正数表示加价，负数表示减价</small></h3>
                              </div>
                              <div class="modal-body" id="" style="height:100px" >
                                  <div class="form-group">
                                      <label class="col-md-2 control-label" >修改值</label>
                                      <div class="col-md-5">
                                        <input type="text"  class="form-control" id="OtherAdjust" name="OtherAdjust" value="" ></input> 
                                          <input type="hidden" name="orderid" id="orderid"/>
                                     </div>
                                   </div>                             
                               </div>
                              <div class="modal-footer">
                                 <button type="button" class="btn default" data-dismiss="modal">取消</button>
                                 <button type="button" class="btn green" onclick="Do();" data-dismiss="modal">确定</button>
                              </div>
                           <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                     </div>
                  </div>
            <!-- /.View -->

<div class="modal fade in" id="full" tabindex="-1" role="full" aria-hidden="true">
                        <div class="modal-dialog modal-full">
                           <div class="modal-content">
                              <div class="modal-header">
                                 <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                                 <h3 class="modal-title" style="font-family:'Microsoft YaHei';font-weight: 500;font-size: 20px;">修改订单价格<small  style="color:red"> 输入的数值可正可负，正数表示加价，负数表示减价</small></h3>
                              </div>
                              <div class="modal-body" id="" style="height:100px" >
                                  <div class="form-group">
                                      <label class="col-md-2 control-label" >修改值</label>
                                      <div class="col-md-5">
                                        <input type="text"  class="form-control" id="OtherAdjust" name="OtherAdjust" value="" ></input> 
                                          <input type="hidden" name="orderid" id="orderid"/>
                                     </div>
                                   </div>                             
                               </div>
                              <div class="modal-footer">
                                 <button type="button" class="btn default" data-dismiss="modal">取消</button>
                                 <button type="button" class="btn green" onclick="Do();" data-dismiss="modal">确定</button>
                              </div>
                           <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                     </div>
                  </div>

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<link href="/css/box.css" rel="stylesheet" />
<script src="~/Scripts/box.js"></script>
<script src="/Scripts/_config.js"></script>


