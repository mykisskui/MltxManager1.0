        /// <summary>
        /// 商品详情页
        /// </summary>
        /// <returns></returns>
        public ActionResult MallDetails(string goodid)
        {
            int gid;


            Mltx_GoodsInfo_shop ginfo = new Mltx_GoodsInfo_shop();
            ViewBag.userid = "mltxshopcart";
            if (string.IsNullOrEmpty(goodid))
