@model MltxManager.Models.DBModel.Mltx_MemberRank
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <script>
    </script>
    <div class="container-fluid" >
    <div class="rule">  
         <!-- BEGIN PAGE HEADER-->
         <div class="row">
            <div class="col-md-12">
               <!-- BEGIN PAGE TITLE & BREADCRUMB-->
               <h3 class="titles">
                  会员等级添加 <small>会员等级添加编辑</small>
                  <a href="javascript:history.go(-1);location.reload()" class="btn default" style="float:right;"><i class="icon-arrow-left"></i> 返回</a>
               </h3>
        
               <ul class="page-breadcrumb breadcrumb">
                  <li>
                     <i class="icon-home"></i>
                     <a href="/Mltx_Member/Level">会员等级</a>
                  </li> <i class="icon-angle-right"></i> 
                  <li><a href="JavaScript:location.reload()">会员等级添加编辑</a></li>
               </ul>
            </div>
         </div>
      <div class="row  col-md-12" style="padding-left:10%;">
              <div class="portlet-body form ">
                <form class="form-horizontal" role="form" data-action="/Mltx_Member/LevelAdd" id="form" method="post">
                      <div class="form-body">
                           <div class="form-group">
                                  <label class="col-md-2 control-label">会员等级名称</label>
                                  <div class="col-md-5">
                                     <input type="text" class="form-control" value="@Model.Name" id="levelname" name="levelname" placeholder="">
                                      <span class="span-point">*</span>
                                  </div>
                           </div>
                           <div class="form-group">
                              <label class="col-md-2 control-label">额度设置</label>
                              <div class="col-md-5">
                                  <input type="text" class="form-control" id="levelset" value="@Model.Value" name="levelset" placeholder=""> 
                                   <span class="span-point">*</span>
                              </div>
                           </div>
                          <div class="form-group">
                                  <label class="col-md-2 control-label"></label>
                                    <div class="col-md-5">
                                         <label style="font-size:14px;font-family:'Microsoft YaHei';color:#808080;margin-top: 5px;">
                                            额度必须为整数
                                        </label>
                                 </div>
                          </div>
                               <div class="form-group">
                              <label class="col-md-2 control-label">折扣率(%)</label>
                              <div class="col-md-5">
                                  <input type="text" class="form-control" id="leveldiscount" value="@Model.Discount" name="leveldiscount" placeholder=""> 
                                   <span class="span-point">*</span>
                              </div>
                           </div>
                            <div class="form-group">
                                  <label class="col-md-2 control-label"></label>
                                    <div class="col-md-5">
                                         <label style="font-size:14px;font-family:'Microsoft YaHei';color:#808080;margin-top: 5px;">
                                            折扣率必须为[1-100]整数
                                        </label>
                                 </div>
                          </div>
                          <style>
                              .rankselect {
                               
                                  text-align:center!important;
                                  padding:3px!important;
                                  line-height:20px;
                                  margin-right:5px!important;
                                  margin-top:3px!important;
                                  font-size:12px;
                              }
                              .rankselecttrue {
                                  background:#28b779!important;
                                  color:#fff!important;
                              }
                              .rankselectfalse {
                                  background:#efefef !important;
                                  color:#818181!important;
                              }
                          </style>
                        </div>
                    <input type="hidden" value="" id="jsonsid" name="jsonsid" />
                    <input type="hidden" value="rankselect0," id="rankselectid" name="rankselectid" />
                    <input type="hidden" value="" id="ranki" name="ranki" />
                      <div class="form fluid">
                           <div class="col-md-offset-2 col-md-5">
                               <input id="id" value="@Model.Id" name="id" type="hidden" />
                              <button type="type" class="btn green" onclick="return authcode.yanzheng(this,'LevelAdd','form')">保存</button>
                           </div>
                        </div>
                  </form>
              </div>
         </div>



        </div>
        </div>
<link href="/css/box.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <script src="/Scripts/box.js"></script>
<script src="/Scripts/_config.js"></script>

