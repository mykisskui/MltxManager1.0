@model MltxManager.Models.DBModel.Mltx_MemberInfo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <script>
    </script>
    <div class="container-fluid" >
    <div class="rule">  
         <!-- BEGIN PAGE HEADER-->
         <div class="row">
            <div class="col-md-12">
               <!-- BEGIN PAGE TITLE & BREADCRUMB-->
               <h3 class="titles">
                  会员信息编辑 <small>会员信息编辑</small>
                  <a href="javascript:history.go(-1);location.reload()" class="btn default" style="float:right;"><i class="icon-arrow-left"></i> 返回</a>
               </h3>
        
               <ul class="page-breadcrumb breadcrumb">
                  <li>
                     <i class="icon-home"></i>
                     <a href="/Mltx_Member/Index">会员信息</a>
                  </li> <i class="icon-angle-right"></i> 
                  <li><a href="JavaScript:location.reload()">会员信息编辑</a></li>
               </ul>
            </div>
         </div>
      <div class="row  col-md-12" style="padding-left:10%;">
              <div class="portlet-body form ">
                <form class="form-horizontal" role="form" data-action="/Mltx_Member/IndexEdit" id="form" method="post">
                      <div class="form-body">
                             <div class="form-group">
                                  <label class="col-md-2 control-label">会员编号</label>
                                  <div class="col-md-5">
                                     <input type="text" class="form-control" value="@Model.UID" readonly="" id="" name="" placeholder="">
                                  </div>
                           </div>
                           <div class="form-group">
                                  <label class="col-md-2 control-label">会员名称</label>
                                  <div class="col-md-5">
                                     <input type="text" class="form-control" value="@Model.MemberName" id="MemberName" name="MemberName" placeholder="">
                                      <span class="span-point">*</span>
                                  </div>
                           </div>
                             <div class="form-group">
                                  <label class="col-md-2 control-label">手机号码</label>
                                  <div class="col-md-5">
                                     <input type="text" class="form-control" readonly="" value="@Model.Tel" id="Tel" name="Tel" placeholder="">
                                  </div>
                           </div>
                             <div class="form-group">
                                  <label class="col-md-2 control-label">余额调整</label>
                                  <div class="col-md-5">
                                     <input type="text" class="form-control" value="0" id="Balance" name="Balance" placeholder="">
                                      <span class="span-point">*</span>
                                  </div>
                           </div>
                                                   <div class="form-group">
                                  <label class="col-md-2 control-label"></label>
                                    <div class="col-md-5">
                                         <label style="font-size:14px;font-family:'Microsoft YaHei';color:#808080;margin-top: 5px;">
                                             使用加号(减号)区分操作 例:+100
                                        </label>
                                 </div>
                          </div>
                              <div class="form-group">
                                  <label class="col-md-2 control-label">积分调整</label>
                                  <div class="col-md-5">
                                     <input type="text" class="form-control" value="0" id="Integral" name="Integral" placeholder="">
                                      <span class="span-point">*</span>
                                  </div>
                           </div>
                                                   <div class="form-group">
                                  <label class="col-md-2 control-label"></label>
                                    <div class="col-md-5">
                                         <label style="font-size:14px;font-family:'Microsoft YaHei';color:#808080;margin-top: 5px;">
                                             使用加号(减号)区分操作 例:+100
                                        </label>
                                 </div>
                          </div>
                             <div class="form-group">
                                  <label class="col-md-2 control-label">生日</label>
                                  <div class="col-md-5">
                                     @*<input type="text" class="form-control" readonly="" value="2015/03/17" id="" name="" placeholder="">*@
                                      <div class="form-control" style="border:0;">@Model.Birthday.ToString("yyyy-MM-dd")</div>
                                  </div>
                           </div>
                          <style>
                              .rankselect {
                               
                                  text-align:center!important;
                                  padding:3px!important;
                                  line-height:20px;
                                  margin-right:5px!important;
                                  margin-top:3px!important;
                                  font-size:12px;
                              }
                              .rankselecttrue {
                                  background:#28b779!important;
                                  color:#fff!important;
                              }
                              .rankselectfalse {
                                  background:#efefef !important;
                                  color:#818181!important;
                              }
                          </style>
                        </div>
                    <input type="hidden" value="" id="jsonsid" name="jsonsid" />
                    <input type="hidden" value="rankselect0," id="rankselectid" name="rankselectid" />
                    <input type="hidden" value="" id="ranki" name="ranki" />
                      <div class="form fluid">
                           <div class="col-md-offset-2 col-md-5">
                               <input id="id" value="@Model.Id" name="id" type="hidden" />
                              <button type="button" class="btn green" onclick="return authcode.yanzheng(this,'IndexEdit','form')">保存</button>
                           </div>
                        </div>
                  </form>
              </div>
         </div>
        </div   
        </div>
<link href="/css/box.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.js"></script>
    <script src="/Scripts/box.js"></script>
<script src="/Scripts/_config.js"></script>

